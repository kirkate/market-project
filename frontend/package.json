{
  "license": "UNLICENSED",
  "name": "mfe-boilerplate",
  "version": "0.0.1",
  "description": "MFE boilerplate based on Webpack and Preact",
  "engines": {
    "node": ">=14"
  },
  "scripts": {
    "analyze": "yarn build --analyze",
    "start": "webpack serve --open --mode development",
    "build": "webpack --mode production --no-devtool",
    "build:dev": "webpack --mode development",
    "lint": "yarn lint:css && yarn lint:ts",
    "lint:fix": "yarn lint:css:fix && yarn lint:ts:fix",
    "lint:ts": "eslint ./src --ext .ts,.tsx",
    "lint:ts:fix": "yarn lint:ts --fix",
    "lint:css": "stylelint ./src",
    "lint:css:fix": "yarn lint:css --fix",
    "test": "jest"
  },
  "dependencies": {
    "@babel/core": "7.13.14",
    "@babel/plugin-proposal-class-properties": "7.13.0",
    "@babel/preset-env": "7.13.12",
    "@babel/preset-react": "7.13.13",
    "@babel/preset-typescript": "7.13.0",
    "@webcomponents/webcomponentsjs": "2.5.0",
    "babel-loader": "8.2.2",
    "babel-plugin-jsx-control-statements": "4.1.0",
    "copy-webpack-plugin": "8.1.0",
    "core-js": "3.10.0",
    "css-loader": "5.2.0",
    "cssnano": "4.1.11",
    "postcss": "8.2.9",
    "postcss-custom-media": "8.0.0",
    "postcss-import": "14.0.1",
    "postcss-loader": "5.2.0",
    "postcss-nested": "5.0.5",
    "preact": "10.5.13",
    "react-router-dom": "^5.2.0",
    "webpack": "5.28.0",
    "webpack-cli": "4.6.0",
    "yarn": "^1.22.10"
  },
  "devDependencies": {
    "@testing-library/dom": "7.30.3",
    "@testing-library/jest-dom": "5.11.10",
    "@testing-library/user-event": "13.1.1",
    "@typescript-eslint/eslint-plugin": "4.20.0",
    "babel-jest": "26.6.3",
    "eslint": "7.18.0",
    "eslint-config-airbnb-typescript": "12.3.1",
    "eslint-plugin-import": "2.22.1",
    "eslint-plugin-jsx-a11y": "6.4.1",
    "eslint-plugin-react": "7.22.0",
    "jest": "26.6.3",
    "jest-fetch-mock": "3.0.3",
    "prettier": "2.3.2",
    "stylelint": "13.12.0",
    "stylelint-config-rational-order": "0.1.2",
    "stylelint-config-standard": "20.0.0",
    "stylelint-order": "4.1.0",
    "typescript": "4.2.3",
    "webpack-bundle-analyzer": "4.4.0",
    "webpack-dev-server": "3.11.2"
  }
}
